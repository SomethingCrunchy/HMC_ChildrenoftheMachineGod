			<soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
		</race>
		<comps>
			<li Class="SK.CompProperties_PawnJumper">
				<maxCharges>5</maxCharges> <!-- Number of possible jumps -->
				<jumpCooldown>360</jumpCooldown> <!-- Jump cooldown in ticks -->
				<range>4</range>
				<chargeNoun>jump</chargeNoun>
				<hotKey>Misc4</hotKey>
				<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
			</li>
		</comps>
		<butcherProducts>
			<TitaniumBar>4</TitaniumBar>
			<DepletedUranium>5</DepletedUranium>
			<CarbonAlloy>3</CarbonAlloy>
		</butcherProducts>
		<modExtensions>
			<li Class="CombatExtended.RacePropertiesExtensionCE">
				<bodyShape>Quadruped</bodyShape>
			</li>
		</modExtensions>
